{
    "name": "svelte-app",
    "version": "1.0.0",
    "scripts": {
        "clean": "rimraf dist public/build",
        "dev:ui": "rollup -c -w",
        "dev:server": "npm run build:server && concurrently \"npm run build:server:watch\" \"npm run start:server\"",
        "build": "npm run build:ui && npm run build:server",
        "build:ui": "rollup -c",
        "build:server": "tsc --project tsconfig.server.json --preserveWatchOutput --esModuleInterop --outDir dist",
        "build:server:watch": "tsc --project tsconfig.server.json   --watch --preserveWatchOutput --esModuleInterop --outDir dist",
        "start:server": "nodemon dist/server/app.js --exec 'ts-node'",
        "validate": "svelte-check"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-typescript": "^5.0.2",
        "@tsconfig/svelte": "^1.0.0",
        "@types/classnames": "^2.2.10",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.7",
        "@types/express-jwt": "^0.0.42",
        "@types/mongoose": "^5.7.34",
        "@types/node": "^14.0.26",
        "@types/passport": "^1.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/ramda": "^0.27.12",
        "concurrently": "^5.2.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "mongoose": "^5.9.26",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "rimraf": "^3.0.2",
        "rollup": "^2.26.8",
        "rollup-plugin-inject-process-env": "^1.3.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-serve-proxy": "^1.1.4",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.1",
        "rollup-plugin-typescript2": "^0.27.2",
        "svelte": "^3.0.0",
        "svelte-check": "^0.1.59",
        "svelte-preprocess": "^4.0.0",
        "ts-node": "^8.10.2",
        "tslib": "^2.0.0",
        "typescript": "^3.9.3"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-jwt": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "method-override": "^3.0.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "ramda": "^0.27.0",
        "true-myth": "^4.0.0",
        "winston": "^3.3.3"
    },
    "nodemonConfig": {
        "watch": [
            "dist"
        ],
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "ext": "js"
    }
}
