{
    "name": "svelte-app",
    "version": "1.0.0",
    "scripts": {
        "clean": "rimraf dist",
        "dev:ui": "rollup -c -w",
        "dev:server": "npm run build:server && concurrently \"npm run build:server:watch\" \"npm run start:server\"",
        "build": "npm run build:ui && npm run build:server",
        "build:ui": "rollup -c",
        "build:server": "tsc --project tsconfig.server.json --preserveWatchOutput --esModuleInterop --outDir dist",
        "build:server:watch": "tsc --project tsconfig.server.json   --watch --preserveWatchOutput --esModuleInterop --outDir dist",
        "start": "concurrently \"npm run start:ui\" \"npm run start:server\"",
        "start:ui": "sirv public",
        "start:server": "nodemon dist/app.js --exec 'ts-node'",
        "validate": "svelte-check"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-typescript": "^4.0.0",
        "@tsconfig/svelte": "^1.0.0",
        "@types/classnames": "^2.2.10",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.7",
        "@types/mongoose": "^5.7.34",
        "@types/node": "^14.0.26",
        "@types/ramda": "^0.27.12",
        "concurrently": "^5.2.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "mongoose": "^5.9.26",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "rimraf": "^3.0.2",
        "rollup": "^2.3.4",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^5.1.2",
        "sirv-cli": "^0.4.4",
        "svelte": "^3.0.0",
        "svelte-check": "^0.1.59",
        "svelte-preprocess": "^4.0.0",
        "ts-node": "^8.10.2",
        "tslib": "^2.0.0",
        "typescript": "^3.9.3"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "express": "^4.17.1",
        "method-override": "^3.0.0",
        "ramda": "^0.27.0",
        "true-myth": "^4.0.0",
        "winston": "^3.3.3"
    },
    "nodemonConfig": {
        "watch": [
            "dist"
        ],
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "ext": "js"
    }
}
